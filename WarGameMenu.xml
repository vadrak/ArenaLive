<Ui xmlns="http://www.blizzard.com/wow/ui"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">

  <Button name="ArenaLiveTeamLeaderButtonTemplate" virtual="true">
    <Size>
      <AbsDimension x="182" y="64" />
    </Size>
    <Layers>
      <Layer level="BACKGROUND">
        <Texture name="$parentButtonBackground" parentKey="btnBG"
            file="Interface\Buttons\UI-EmptySlot">
          <Size>
            <AbsDimension x="57" y="57" />
          </Size>
          <Anchors>
            <Anchor point="LEFT">
              <Offset>
                <AbsDimension x="0" y="-4" />
              </Offset>
            </Anchor>
          </Anchors>
        </Texture>
        <Texture name="$parentBackground" parentKey="bg">
          <Anchors>
            <Anchor point="TOPLEFT">
              <Offset>
                <AbsDimension x="48" y="-17" />
              </Offset>
            </Anchor>
            <Anchor point="BOTTOMRIGHT">
              <Offset>
                <AbsDimension x="0" y="9" />
              </Offset>
            </Anchor>
          </Anchors>
          <Color r="1" g="0" b="0" a="0.05" />
        </Texture>
      </Layer>
      <Layer level="OVERLAY">
        <FontString name="$parentTitle" inherits="GameFontNormal"
          parentKey="title">
          <Anchors>
            <Anchor point="TOPLEFT">
              <Offset>
                <AbsDimension x="10" y="0" />
              </Offset>
            </Anchor>
          </Anchors>
        </FontString>
        <Texture name="$parentIcon" parentKey="icon">
          <Size>
            <AbsDimension x="37" y="37" />
          </Size>
          <Anchors>
            <Anchor point="TOPLEFT">
              <Offset>
                <AbsDimension x="10" y="-17" />
              </Offset>
            </Anchor>
          </Anchors>
        </Texture>
        <FontString name="$parentNameText" inherits="FriendsFont_Normal"
            justifyH="LEFT" parentKey="name">
          <Size>
            <AbsDimension x="120" y="12" />
          </Size>
          <Anchors>
            <Anchor point="TOPLEFT" relativeTo="$parentIcon"
                relativePoint="TOPRIGHT">
              <Offset>
                <AbsDimension x="5" y="-5" />
              </Offset>
            </Anchor>
          </Anchors>
          <Color r="0.510" g="0.773" b="1" />
        </FontString>
        <FontString name="$parentInfoText" parentKey="info"
          inherits="FriendsFont_Small" justifyH="LEFT">
          <Size>
            <AbsDimension x="120" y="10" />
          </Size>
          <Anchors>
            <Anchor point="TOPLEFT" relativeTo="$parentNameText"
                relativePoint="BOTTOMLEFT">
              <Offset>
                <AbsDimension x="0" y="-2" />
              </Offset>
            </Anchor>
          </Anchors>
          <Color r="0.486" g="0.518" b="0.541" />
        </FontString>
      </Layer>
    </Layers>
  </Button>

  <Frame name="ArenaLiveWarGameMenu" inherits="PortraitFrameTemplate"
      parent="UIParent" hidden="true">
    <Size>
      <AbsDimension x="594" y="428" />
    </Size>
    <Anchors>
      <Anchor point="CENTER">
        <Offset>
          <AbsDimension x="0" y="0" />
        </Offset>
      </Anchor>
    </Anchors>
    <Frames>
      <Frame name="$parentPlayerListInset" useParentLevel="true"
          inherits="InsetFrameTemplate">
        <Size>
          <AbsDimension x="214" y="378" />
        </Size>
        <Anchors>
          <Anchor point="TOPLEFT">
            <Offset>
              <AbsDimension x="1" y="-48" />
            </Offset>
          </Anchor>
        </Anchors>
      </Frame>
      <Frame name="$parentMapInset" useParentLevel="true"
          inherits="InsetFrameTemplate">
        <Size>
          <AbsDimension x="363" y="166" />
        </Size>
        <Anchors>
          <Anchor point="TOPRIGHT">
            <Offset>
              <AbsDimension x="-5" y="-48" />
            </Offset>
          </Anchor>
        </Anchors>
      </Frame>
      <ScrollFrame name="$parentPlayerListScrollFrame" parentKey="players"
          inherits="HybridScrollFrameTemplate">
        <Size>
          <AbsDimension x="189" y="369" />
        </Size>
        <Anchors>
          <Anchor point="TOPLEFT" relativeTo="$parentPlayerListInset">
            <Offset>
              <AbsDimension x="5" y="-5" />
            </Offset>
          </Anchor>
        </Anchors>
        <Frames>
          <Slider name="$parentScrollBar" inherits="HybridScrollBarTemplate">
            <Anchors>
              <Anchor point="TOPLEFT" relativePoint="TOPRIGHT">
                <Offset>
                  <AbsDimension x="0" y="-12" />
                </Offset>
              </Anchor>
              <Anchor point="BOTTOMLEFT" relativePoint="BOTTOMRIGHT">
                <Offset>
                  <AbsDimension x="0" y="11" />
                </Offset>
              </Anchor>
            </Anchors>
          </Slider>
        </Frames>
      </ScrollFrame>
      <ScrollFrame name="$parentMapsScrollFrame" parentKey="maps"
          inherits="HybridScrollFrameTemplate">
        <Size>
          <AbsDimension x="341" y="160" />
        </Size>
        <Anchors>
          <Anchor point="TOPLEFT" relativeTo="$parentMapInset">
            <Offset>
              <AbsDimension x="0" y="-4" />
            </Offset>
          </Anchor>
        </Anchors>
        <Frames>
          <Slider name="$parentScrollBar" inherits="HybridScrollBarTemplate">
            <Anchors>
              <Anchor point="TOPLEFT" relativePoint="TOPRIGHT">
                <Offset>
                  <AbsDimension x="0" y="-12" />
                </Offset>
              </Anchor>
              <Anchor point="BOTTOMLEFT" relativePoint="BOTTOMRIGHT">
                <Offset>
                  <AbsDimension x="0" y="11" />
                </Offset>
              </Anchor>
            </Anchors>
          </Slider>
        </Frames>
      </ScrollFrame>
      <Button name="$parentLeftTeamLeaderButton" parentKey="lLeadBtn"
          inherits="ArenaLiveTeamLeaderButtonTemplate">
        <Anchors>
          <Anchor point="LEFT" relativeTo="$parentPlayerListInset"
              relativePoint="RIGHT">
            <Offset>
              <AbsDimension x="2" y="-64" />
            </Offset>
          </Anchor>
        </Anchors>
      </Button>
      <Button name="$parentRightTeamLeaderButton" parentKey="rLeadBtn"
          inherits="ArenaLiveTeamLeaderButtonTemplate">
        <Anchors>
          <Anchor point="LEFT" relativeTo="$parentLeftTeamLeaderButton"
              relativePoint="RIGHT">
            <Offset>
              <AbsDimension x="5" y="0" />
            </Offset>
          </Anchor>
        </Anchors>
      </Button>
      <Button name="$parentTournamentModeCheckButton"
          parentKey="tournModeButton" inherits="OptionsCheckButtonTemplate">
        <Anchors>
          <Anchor point="BOTTOMLEFT" relativeTo="$parentPlayerListInset"
              relativePoint="BOTTOMRIGHT">
            <Offset>
              <AbsDimension x="3" y="-2" />
            </Offset>
          </Anchor>
        </Anchors>
      </Button>
      <Button name="$parentStartButton" inherits="UIPanelButtonTemplate"
          text="START_WARGAME">
        <Size>
          <AbsDimension x="130" y="22" />
        </Size>
        <Anchors>
          <Anchor point="BOTTOMRIGHT">
            <Offset>
              <AbsDimension x="-3" y="2" />
            </Offset>
          </Anchor>
        </Anchors>
      </Button>
    </Frames>
  </Frame>

  <Script File="WarGameMenu.lua" />
</Ui>
